template AirlineService
  with
    airline: Party
    customer: Party
  where
    signatory airline
    observer customer

    nonconsuming choice CreateBlankCLPApplication: ContractId CLPApplication
      controller customer
      do
        now <- getTime
        create CLPApplication with
          customer = customer
          airline = airline
          id = ""
          name = ""
          address = ""
          email = ""
          phone = None
          timeStamp = now
          dob = toDateUTC now